{
  "manifest_version": 2,

  "name": "Tab sound streamer",
  "description": "This extension allows streaming tab's sound to the mobile device",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabCapture",
    "storage"
  ],
    "background": {
    "page": "eventPage.html",
    "persistent": true
  }
}